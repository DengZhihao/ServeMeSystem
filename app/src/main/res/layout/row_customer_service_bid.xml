<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/list_selector"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@drawable/list_selector"
        android:layout_height="match_parent">

        <!--  Category Image -->
        <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip">

            <ImageView
                android:id="@+id/vendorAvailableRequests_categoryIcon"
                android:layout_width="139dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_method_draw_image" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail">

            <!-- Vendor Name -->
            <TextView
                android:id="@+id/customerServiceBid_vendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Vendor Name"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
                android:textColor="#040404"
                android:textStyle="bold"
                android:typeface="sans" />

            <!-- Bid Amount -->
            <TextView
                android:id="@+id/customerServiceBid_bidAmt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:text="Amount"
                android:textAppearance="@style/TextAppearance.MyTheme.Body1"
                android:textColor="#343434" />

            <!-- Bid Duration -->
            <TextView
                android:id="@+id/customerServiceBid_bidDuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:text="Duration"
                android:textAppearance="@style/TextAppearance.MyTheme.Body1"
                android:textColor="#343434" />

            <!-- Bid Notes -->
            <TextView
                android:id="@+id/customerServiceBid_bidNotes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:text="Notes"
                android:textAppearance="@style/TextAppearance.MyTheme.Body1"
                android:textColor="#343434" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="@android:color/holo_green_dark" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>